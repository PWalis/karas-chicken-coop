generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  priceInCents BigInt
  category    categories @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  Int 
  inventory   inventory? 
  images      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  orderItem[]
}

model categories {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  product     products[] 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model inventory {
  id          Int      @id @default(autoincrement())
  productId   Int      @unique
  product     products? @relation(fields: [productId], references: [id], onDelete: Cascade)
  xs_quantity    Int
  s_quantity     Int
  m_quantity     Int
  l_quantity     Int
  xl_quantity    Int
  xxl_quantity   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model order {
  id         String      @id @default(uuid())
  userName   String
  email      String
  address    String
  city       String
  state      String
  zip        String
  phone      String
  orderItems orderItem[]
}

model orderItem {
  id        Int      @id @default(autoincrement())
  quantity  Int
  productId Int
  product   products  @relation(fields: [productId], references: [id])
  orderId   String
  order     order    @relation(fields: [orderId], references: [id])
}